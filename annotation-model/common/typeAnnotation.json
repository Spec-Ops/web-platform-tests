{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Verify that Annotation has a type property with value 'Annotation'",
  "assertionType": "must", 
  "expectedResult": "valid",
  "onUnexpectedResult": "failAndContinue",
  "errorMessage": "Error: Annotation must have a property 'type', and the only or first 'type' (if an array of types) must be a string with value 'Annotation' (Section 3.1 of the Data Model).",
  "type": "object",
  "properties": {
    "type": {
        "anyOf": [ 
            {
                "type": "string",
                "enum": ["Annotation"]
            },
            {
                "type": "array",
                "minItems": 1,
                "items": [{
                    "type": "string",
                    "enum": ["Annotation"]
                }]
            }
        ],
        "not": {"type": "object"}
    }
  },
  "required": ["type"]  
}
 
