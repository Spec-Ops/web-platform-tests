{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "'http://www.w3.org/ns/anno.jsonld must be' an @context value (Section 3.1)",
    "assertionType": "must",
    "expectedResult": "valid",
    "errorMessage": "Error: 'http://www.w3.org/ns/anno.jsonld' is neither first nor only @context value.",
    "type": "object",
    "properties": {"@context": {
        "anyOf": [
            {
                "type": "string",
                "enum": ["http://www.w3.org/ns/anno.jsonld"]
            },
            {
                "type": "array",
                "minItems": 1,
                "items": [{
                    "type": "string",
                    "enum": ["http://www.w3.org/ns/anno.jsonld"]
                }],
                "additionalItems": true
            }
        ],
        "not": {"type": "object"}
    }}
}

